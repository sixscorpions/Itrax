<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

            <ImageView
                android:layout_width="@dimen/_90dp"
                android:layout_height="@dimen/_25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/just_name" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_count"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_marginTop="@dimen/_5dp">

                <TextView
                    android:id="@+id/tv_off_line_count"
                    android:layout_width="@dimen/_32dp"
                    android:layout_height="@dimen/_32dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:layout_marginStart="@dimen/_20dp"
                    android:background="@drawable/drawable_count_button"
                    android:gravity="center"
                    android:text="@string/nine_ninety"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_15sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_weight="1"
                    android:text="@string/note"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_20sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_exit_to_app_white_24dp"
                    android:gravity="center_vertical"
                    android:text="@string/logout"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <EditText
                android:id="@+id/edt_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@drawable/drawable_write_button"
                android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                android:hint="@string/customer_name"
                android:inputType="textCapSentences"
                android:maxLength="20"
                android:minHeight="@dimen/_40dp"
                android:padding="@dimen/_10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/_20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@drawable/drawable_write_button"
                android:minHeight="@dimen/_40dp"
                android:padding="@dimen/_10dp">

                <EditText
                    android:id="@+id/edt_mobile_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    android:digits="0123456789"
                    android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:hint="@string/mobile_number"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/_20sp" />

                <TextView
                    android:id="@+id/edt_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:text="@string/check_icon"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="@dimen/_20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/edt_delivery_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@drawable/drawable_write_button"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                android:hint="@string/delivery_date"
                android:maxLength="20"
                android:minHeight="@dimen/_40dp"
                android:padding="@dimen/_10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/_20sp" />

            <LinearLayout
                android:id="@+id/ll_dynamic_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <EditText
                android:id="@+id/edt_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@drawable/drawable_write_button"
                android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                android:hint="@string/note"
                android:inputType="textMultiLine"
                android:maxLength="300"
                android:maxLines="10"
                android:minHeight="@dimen/_150dp"
                android:padding="@dimen/_10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/_20sp" />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="@dimen/_200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@drawable/login_button_new"
                android:minHeight="@dimen/_50dp"
                android:text="@string/send"
                android:textAllCaps="false"
                android:textColor="@color/submit_bg_ground"
                android:textSize="@dimen/_20sp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
